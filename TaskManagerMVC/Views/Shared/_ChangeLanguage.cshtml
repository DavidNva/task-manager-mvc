@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using TaskManagerMVC.Services
@inject IViewLocalizer Localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var urlRetorno = string.IsNullOrEmpty(Context.Request.Path) ? "/" : $"~{Context.Request.Path.Value}";
}

<form asp-controller="Home" asp-action="ChangeLanguage" asp-route-urlRetorno="@urlRetorno" method="post"
      class="form-control" role="form" style="display:inline">
    <label>@Localizer["Idioma:"]</label>
    <select name="cultura" asp-for="@requestCulture.RequestCulture.UICulture.Name"
    id="cultura" onchange="this.form.submit()" asp-items="Constantes.CulturasUISoportadas">

    </select>
</form>