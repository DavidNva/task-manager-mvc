<label><i class="bi bi-check-square"></i> Pasos de la tarea</label>
<button class="btn btn-primary btn-sm" onclick="manejarClickAgregarPaso()">
    <i class="bi bi-plus"></i>
</button>

<div data-bind="foreach: pasos"> 
    <div class="row mt-2">
        <div class="col-1">
            <input type="checkbox" class="form-check-input" name="chbPaso"
            data-bind="{checked: realizado}"/>
        </div>
        <div class="col-11">
            <span data-bind="text: description, hidden: modoEdicion"></span>
            <textarea name="txtPasoDescription" class="form-control"
            placeholder="Agregue una descripcion"
            data-bind="{value: description, visible: modoEdicion}"></textarea>

            <div class="mt-2" data-bind = "{value: description, visible: modoEdicion}">
                <button class="btn btn-primary" data-bind="{click: manejarClickSalvarPaso}">
                    Guardar
                </button>
                <button class="btn btn-secondary" data-bind="{click: manejarClickCancelarPaso}">
                    Cancelar
                </button>
               @*  <button class="btn btn-danger" data-bind="{click: manejarClickBorrarPaso}">
                    Borrar
                </button> *@
            </div>
           
        </div>
    </div>
</div>